<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10sp"
        android:layout_height="320sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/pckBookHisImg"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:src="@drawable/mumbai"
                android:scaleType="fitXY"
                android:layout_margin="5sp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_above="@+id/R4"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha=".4"
                    android:background="#000000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20sp"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"
                    android:text="Weekend Trip Mumbai"/>
                <ImageView
                    android:id="@+id/pckBookHisStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="20sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/pckBookHisStar"
                    android:layout_centerVertical="true"
                    android:paddingRight="10sp"
                    android:text="4.3/5"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/R4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pckBookHisImg">
                <TextView
                    android:id="@+id/pckbookt1"
                    android:paddingTop="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20sp"
                    android:textColor="#d6cfcf"
                    android:text="Booked By:"
                    android:textSize="12sp"/>
                <TextView

                    android:paddingTop="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Booking Id:"
                    android:textColor="#d6cfcf"
                    android:paddingRight="20sp"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pckbookt1"
                    android:paddingLeft="20sp"
                    android:id="@+id/pckBookHisName"
                    android:text="Girish Jonnavithula"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pckbookt1"
                    android:paddingLeft="20sp"
                    android:id="@+id/pckBookHisID"
                    android:text="Dream1234"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20sp"
                    android:textColor="#4f98e7"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
            <View
                android:id="@+id/pckbookHisV1"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/R4"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="5sp"
                android:background="#d7d0d0"/>
            <View
                android:id="@+id/pckbookHisV2"
                android:layout_width="1sp"
                android:layout_height="50sp"
                android:layout_below="@+id/pckbookHisV1"
                android:layout_marginLeft="5sp"
                android:background="#d7d0d0"
                />
            <View
                android:layout_width="1sp"
                android:layout_height="50sp"
                android:layout_below="@+id/pckbookHisV1"
                android:layout_marginRight="5sp"
                android:layout_alignParentRight="true"
                android:background="#d7d0d0"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pckbookHisV1"
                android:orientation="vertical"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="1"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight=".4"
                            android:textSize="12sp"
                            android:paddingLeft="20sp"
                            android:textColor="#d6cfcf"
                            android:text="Date of travel :"/>
                        <TextView
                            android:id="@+id/pckBookHisDate"
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight=".6"
                            android:textSize="14sp"
                            android:paddingLeft="20sp"
                            android:textColor="#000000"
                            android:text="21 Aug 2018"/>
                    </LinearLayout>
                    <View
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:background="#d7d0d0"
                        />
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="1"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight=".4"
                            android:textSize="12sp"
                            android:paddingLeft="20sp"
                            android:textColor="#d6cfcf"
                            android:text="Travellers :"/>
                        <TextView
                            android:id="@+id/pckBookHisPass"
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight=".6"
                            android:textSize="14sp"
                            android:paddingLeft="20sp"
                            android:textColor="#000000"
                            android:text="3 Adults , 1 child"/>
                    </LinearLayout>


                </LinearLayout>
                <View
                    android:id="@+id/pckbookHisV3"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#d7d0d0"
                    />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
