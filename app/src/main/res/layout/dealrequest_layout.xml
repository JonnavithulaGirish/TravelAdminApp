<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220sp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_margin="5sp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/ReqDealPck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coorg 3 day Trip"
        android:paddingTop="10sp"
        android:paddingLeft="15sp"
        android:textSize="15sp"
        android:textColor="#6d9dce"
        android:textStyle="bold"/>
      <TextView
          android:id="@+id/reqBy"
          android:layout_below="@id/ReqDealPck"
          android:layout_width="match_parent"
          android:paddingTop="5sp"
          android:paddingLeft="15sp"
          android:text="Requested By: Goutham Kalikrishna"
          android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Units :5 Adults"
            android:id="@+id/ReqDealUnits"
            android:layout_below="@id/reqBy"
            android:paddingTop="20sp"
            android:paddingLeft="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date : 27 April 2018"
            android:id="@+id/ReqDealDate"
            android:layout_below="@id/ReqDealUnits"
            android:paddingLeft="15sp"/>

            <RelativeLayout
                android:id="@+id/R1"
                android:layout_width="match_parent"
                android:foregroundGravity="center"
                android:paddingLeft="15sp"
                android:layout_below="@id/ReqDealDate"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/T1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2sp"
                android:text="Our Price:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" RS 1200/-"
                android:textSize="16sp"
                android:textColor="#ef8d4c"
                android:layout_toRightOf="@id/T1" />
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/R2"
                android:layout_below="@+id/R1"
                android:layout_width="match_parent"
                android:paddingLeft="15sp"
                android:layout_height="30sp"
                >
                <TextView
                    android:id="@+id/T2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2sp"
                    android:text="Deal Price:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" RS 1000/-"
                    android:textSize="16sp"
                    android:textColor="#9bc75d"
                    android:layout_toRightOf="@id/T2" />
            </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/R2"
            android:weightSum="3">

            <Button
                android:id="@+id/dealAccept"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="match_parent"
                android:text="Accept"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/dealReject"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="match_parent"
                android:text="Reject"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/dealNewQuote"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="match_parent"
                android:text="Final Price"
                android:textAllCaps="false"/>
        </LinearLayout>

      </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>
